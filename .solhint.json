{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": ["error", "^0.8.0"],
        "reason-string": ["warn", {"maxLength": 128}],
        "func-visibility": ["warn", { "ignoreConstructors": true }],
        "not-rely-on-time": [],
        "no-empty-blocks": [],
        "func-name-mixedcase": [],
        "var-name-mixedcase": []
    }
}
